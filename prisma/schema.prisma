generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Rifa {
  id               String   @id @default(uuid())
  nombre           String
  descripcion      String
  monto            Float
  precio_producto  Float?   // Precio total del producto (referencial)
  imagen           String?
  estado           String   @default("activa") // activa, pausada, finalizada, desactivada
  capacidad_maxima Int
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt
  fecha_sorteo     DateTime?

  participantes RifaParticipante[]
  ganador_id    String? // ID de la inscripción ganadora (RifaParticipante)
}

model Participante {
  id            String   @id @default(uuid())
  dni           String?  @unique
  telefono      String?  @unique
  email         String?  @unique
  supabase_id   String?  @unique
  nombre        String?
  password      String?
  estado_cuenta String   @default("activo") // activo, bloqueado
  direccion     String?
  departamento  String?
  provincia     String?
  distrito      String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  inscripciones RifaParticipante[]
  pedidos       Pedido[]
}

model RifaParticipante {
  id                 String   @id @default(uuid())
  rifa_id            String
  participante_id    String
  estado             String   @default("pendiente") // pendiente, aprobado, rechazado, confirmado
  comprobante_imagen String?
  fecha_inscripcion  DateTime @default(now())
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt

  rifa         Rifa         @relation(fields: [rifa_id], references: [id])
  participante Participante @relation(fields: [participante_id], references: [id])
}

model Categoria {
  id          String     @id @default(uuid())
  descripcion String
  created_at  DateTime   @default(now())
  updated_at  DateTime   @updatedAt
  productos   Producto[]
}

model Producto {
  id           String    @id @default(uuid())
  categoria_id String
  nombre       String
  descripcion  String
  precio       Float
  cantidad     Int
  marca        String?
  fotos        String[]
  videos       String[]
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  categoria    Categoria @relation(fields: [categoria_id], references: [id])
  detallesPedido DetallePedido[]
}

model ConfiguracionRedSocial {
  id           String   @id @default(uuid())
  nombre       String
  url          String
  icono        String? // Identificador del icono (ej: "facebook", "instagram", "tiktok")
  color        String? // Color en hex o clase de tailwind opcional
  activo       Boolean  @default(true)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}

model Pedido {
  id              String         @id @default(uuid())
  participante_id String?
  participante    Participante?  @relation(fields: [participante_id], references: [id])
  
  estado          String         @default("orden_recibida") // orden_recibida, procesando, listo_para_enviar, enviado, entregado, cancelado
  total           Float
  fecha_creacion  DateTime       @default(now())
  updated_at      DateTime       @updatedAt
  
  codigo_rastreo  String?
  empresa_envio   String?
  
  // Datos de envío snapshot
  nombre_contacto String?
  telefono        String?
  direccion       String?
  ciudad          String?
  
  detalles        DetallePedido[]
}

model DetallePedido {
  id          String   @id @default(uuid())
  pedido_id   String
  pedido      Pedido   @relation(fields: [pedido_id], references: [id])
  
  producto_id String
  producto    Producto @relation(fields: [producto_id], references: [id])
  
  cantidad    Int
  precio_unitario Float
}

model ConfiguracionMercadoPago {
  id           String   @id @default(uuid())
  public_key   String
  access_token String
  environment  String   @default("sandbox") // sandbox, production
  activo       Boolean  @default(true)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}
